@model IEnumerable<WebUXv2.Models.TaskType>

<h2>Available Apps</h2>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RootComponentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SearchTags)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.ActionLink(item.Name, "RunTask", "TaskManager", new { componentName = item.RootComponentName }, null)*@
                @Html.ActionLink(item.Name, "AddToMyApps", "TaskManager", new { componentName = item.RootComponentName }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RootComponentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SearchTags)
            </td>
        </tr>
    }

</table>