@using WebUXv2.Components
@using WebUXv2.LogicalUnits.TaskManager
@using WebUXv2.Models
@model IEnumerable<WebUXv2.Models.ActiveTask>

<table class="table table-striped table-hover">

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Resume", "ResumeTask", "TaskManager", new { componentTaskId = item.TaskId }, new { @class = "btn btn-success" })
                &nbsp;&nbsp;&nbsp;
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Handoff", "ConfirmHandOff", "TaskManager", new { resumeTaskId = item.TaskId, returnUrl = Request.Url.AbsoluteUri }, new { @class = "btn btn-default" })


            </td>
            <td>
                @Html.ActionLink("Abort", "RunTask", "TaskManager", new { componentName = typeof(LuRunAndManageApps).Name, Command = $"AbortTask|{item.TaskId}" }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
