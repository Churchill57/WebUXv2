@model IEnumerable<WebUXv2.Models.PAPolicy>

@{
    ViewBag.Title = "Index";
}

<h2>PA Policies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Premium)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Annuitant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dependant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beneficiary)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Premium)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Annuitant.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dependant.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beneficiary.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
